<link href="css/website/site.css" rel="stylesheet" />

@if (_langReady)
{
    <div class="top-row ps-3 navbar d-flex align-items-center">
        <div class="container-fluid d-flex justify-content-between align-items-center">

            <!-- Brand -->
            <a class="navbar-brand brand-logo" href="/">
                <div class="brand-icon">
                    <i class="fa-brands fa-dochub"></i>
                </div>
                <div class="brand-text">
                    <div><span class="visually-hidden">D</span>ilmurod</div>
                    <div><span class="visually-hidden">D</span>eveloper</div>
                </div>
            </a>

            <!-- Nav links -->
            <div class="d-none d-md-flex main-nav-links">
                <NavLink class="nav-link-main" href="#home" Match="NavLinkMatch.All">@Lang.T("nav", "home")</NavLink>
                <NavLink class="nav-link-main" href="#about">@Lang.T("nav", "about")</NavLink>
                <NavLink class="nav-link-main" href="#skills">@Lang.T("nav", "skills")</NavLink>
                <NavLink class="nav-link-main" href="#education">@Lang.T("nav", "education")</NavLink>
                <NavLink class="nav-link-main" href="#experience">@Lang.T("nav", "experience")</NavLink>
                <NavLink class="nav-link-main" href="#projects">@Lang.T("nav", "projects")</NavLink>
                <NavLink class="nav-link-main" href="#contact">@Lang.T("nav", "contact")</NavLink>
                <NavLink class="nav-link-main" href="/blogs">@Lang.T("nav", "blog")</NavLink>
            </div>

            <div class="d-flex align-items-center justify-content-end gap-0">
                <!-- Language toggle -->
                <button class="language-toggle" @onclick="CycleLanguage">
                    <i class="fa-solid fa-globe"></i>
                    @CurrentLanguage.ToUpper()
                </button>

                <!-- Hamburger toggle -->
                <button title="Navigation menu" class="navbar-toggler d-md-none" @onclick="ToggleNavMenu" aria-expanded="@(!collapseNavMenu)" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
            </div>
        </div>
    </div>

    <!-- Sidebar overlay and menu -->
    <div class="nav-overlay @(collapseNavMenu ? "" : "show")" @onclick="ToggleNavMenu"></div>

    <div class="nav-sidebar @(collapseNavMenu ? "" : "show")">
        <div class="d-flex justify-content-end px-3 pt-3">
            <button class="close-btn" @onclick="ToggleNavMenu" aria-label="Close menu">&times;</button>
        </div>

        <div class="nav-scroll-wrapper">
            <nav class="nav-center">
                <NavLink class="nav-link mb-2" href="#home" Match="NavLinkMatch.All">@Lang.T("nav", "home")</NavLink>
                <NavLink class="nav-link mb-2" href="#about">@Lang.T("nav", "about")</NavLink>
                <NavLink class="nav-link mb-2" href="#skills">@Lang.T("nav", "skills")</NavLink>
                <NavLink class="nav-link mb-2" href="#education">@Lang.T("nav", "education")</NavLink>
                <NavLink class="nav-link mb-2" href="#experience">@Lang.T("nav", "experience")</NavLink>
                <NavLink class="nav-link mb-2" href="#projects">@Lang.T("nav", "projects")</NavLink>
                <NavLink class="nav-link mb-2" href="#contact">@Lang.T("nav", "contact")</NavLink>
                <NavLink class="nav-link mb-2" href="/blogs">@Lang.T("nav", "blog")</NavLink>
            </nav>
        </div>

        <div class="nav-social-icons d-flex justify-content-center gap-3 py-4">
            @foreach (var social in SocialLinks)
            {
                <a href="@social.Url" target="_blank" title="@social.Title" class="fs-5" style="color: var(--social-icon);">
                    <i class="@social.Icon"></i>
                </a>
            }
        </div>

        <hr class="nav-footer-divider" />

        <footer class="nav-footer text-center py-4" style="color: var(--navbar-text); font-size: 1rem;">
            © Dilmurod Madirimov 2025
        </footer>
    </div>
}
