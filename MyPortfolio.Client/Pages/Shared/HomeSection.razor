<link href="css/website/home.css" rel="stylesheet" />

@if (_langReady)
{
    <div class="container-fluid home-hero d-flex flex-column justify-content-center align-items-center">
        <!-- 📹 Video Background -->
        <video autoplay muted loop playsinline class="background-video">
            <source src="videos/home-bg.mp4" type="video/mp4" />
            Your browser does not support the video tag.
        </video>

        <div class="d-flex flex-column flex-md-row align-items-center hero-content-wrapper justify-content-between" style="z-index: 1;">
            <div class="text-section text-center text-md-start">
                <p class="welcome-text">@Lang.T("hero", "welcome")</p>
                <h1>
                    @Lang.T("hero", "hello")
                    @Lang.T("hero", "greeting")
                </h1>
                <h1>@Lang.T("hero", "iam")</h1>
                <p class="subtitle mt-3">@Lang.T("hero", "role")</p>

                <div class="hero-buttons mt-4 d-flex flex-column flex-sm-row gap-3">
                    <a href="#about" class="btn btn-primary btn-lg">@Lang.T("hero", "moreAbout")</a>
                    <a href="/files/Dilmurod_Resume.pdf" class="btn btn-outline-light btn-lg">@Lang.T("hero", "resume")</a>
                </div>

                <div class="hero-socials mt-4 d-flex flex-wrap gap-1">
                    @foreach (var social in SocialLinks)
                    {
                        <a href="@social.Url" target="_blank" title="@social.Title" class="fs-3">
                            <i class="@social.Icon"></i>
                        </a>
                    }
                </div>
            </div>

            <div class="image-section text-center">
                <img src="/images/profile/profile3.png" alt="Dilmurod's Photo" class="hero-photo img-fluid" />
            </div>
        </div>
    </div>
}